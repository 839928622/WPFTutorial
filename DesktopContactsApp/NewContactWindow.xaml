<Window x:Class="DesktopContactsApp.NewContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DesktopContactsApp"
        mc:Ignorable="d"
        Title="NewContactWindow" Height="450" Width="400">
    <Grid>
      
        <StackPanel
            Margin="10,10,0,10">
            <TextBox x:Name="NameTextBox" Margin="0,0,0,5"></TextBox>
            <!--定义一个输入框 用户输入姓名-->
            <TextBox x:Name="emailTextBox" Margin="0,0,0,5"></TextBox>
            <TextBox x:Name="phoneNumberTextBox" Margin="0,0,0,5"></TextBox>
            <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click"></Button>
        </StackPanel>
    </Grid>
</Window>
